<h1>Listing inquiries</h1>

<table>
  <thead>
    <tr>
      <th>Accepted datetime</th>
      <th>Inquired person</th>
      <th>Dept</th>
      <th>Contents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.accepted_datetime %></td>
        <td><%= inquiry.inquired_person %></td>
        <td><%= inquiry.dept %></td>
        <td><%= inquiry.contents %></td>
        <td><%= link_to 'Show', inquiry %></td>
        <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
        <td><%= link_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Inquiry', new_inquiry_path %>
